<form action="/Livro/Adiciona" method="post">
    <h3 class="mt-3">Adicionar Livro</h3>

    <label class="mt-3" for="titulo">Título:</label>
    <input name="livro.Titulo" id="titulo" class="form-control" />

    <label class="mt-3" for="autor">Autor:</label>
    <input name="livro.Autor" id="autor" class="form-control" />

    <label class="mt-3" for="editora">Editora:</label>
    <input name="livro.Editora" id="editora" class="form-control" />

    <label class="mt-3" for="quantidadeDeExemplares">Quantidade de Exemplares:</label>
    <input name="livro.QuantidadeDeExemplares" id="quantidadeDeExemplares" type="number" class="form-control" />

    <div class="row justify-content-center">
        <input type="submit" value="Cadastrar" class="btn btn-primary mt-3 mr-auto ml-auto" />
    </div>
</form>
