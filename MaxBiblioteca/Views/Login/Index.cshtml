
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="Content/favicon.png" rel="icon" />
</head>
<body style="background-color:#3aa7e3;">
    <div class="bg-light" style="max-width: 580px; margin: auto; padding: 15px; margin-top:15%; border-radius: 5px; height:337px;">
        <h3 style="text-align:center; font-weight:bold;">
            MaxBiblioteca
        </h3>
        <form action="/Login/Autentica" method="post">
            <label class="mt-3" for="login">Login:</label>
            <input name="login" id="login" class="form-control" />

            <label class="mt-3" for="senha">Senha:</label>
            <input name="senha" id="senha" class="form-control" type="password" />

            <div class="row justify-content-center">
                <input type="submit" value="Entrar" class="btn btn-primary mt-3 mr-auto ml-auto"/>
            </div>
        </form>
    </div>
</body>
</html>
