<form action="/Reserva/Atualiza" method="post">
    <h3 class="mt-3">Alterar Reserva</h3>

    <label class="mt-3" for="titulo">Livro:</label>
    <select id="livro" name="reserva.IdLivro" class="form-control">
        @foreach (MaxBiblioteca.Models.Livro livro in ViewBag.Livros)
        {
            <option value="@livro.Id" selected="@livro.Id.Equals(ViewBag.Reserva.IdLivro)">@(livro.Titulo)</option>
        }
    </select>

    <label class="mt-3" for="titulo">Usuário:</label>
    <select id="usuario" name="reserva.IdUsuario" class="form-control">
        @foreach (MaxBiblioteca.Models.Usuario usuario in ViewBag.Usuarios)
        {
            <option value="@usuario.Id" selected="@usuario.Id.Equals(ViewBag.Reserva.IdUsuario)">@(usuario.Nome)</option>
        }
    </select>

    <label class="mt-3" for="dataReserva">Data da Reserva:</label>
    <input value="@ViewBag.Reserva.DataReserva.ToString("yyyy-MM-dd")" name="reserva.DataReserva" type="date" id="dataReserva" class="form-control" />

    <input value="@ViewBag.Reserva.Id" name="reserva.Id" id="Id" class="d-none" />

    <div class="row justify-content-center">
        <input type="submit" value="Alterar" class="btn btn-primary mt-3 mr-auto ml-auto" />
    </div>
</form>