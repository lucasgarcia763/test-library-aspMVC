<h3 class="mt-3">Lista de Usuários</h3>

<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in ViewBag.Usuarios)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nome</td>
                <td>
                    @Html.RouteLink("Alterar", "AlterarUsuario", new { Id = usuario.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
